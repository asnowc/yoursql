{
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "ESNext",
    "lib": ["ESNext"],
    "strict": true,
    "allowImportingTsExtensions": true,
    "skipLibCheck": true,
    "noEmit": true,
    "allowJs": true,
    "isolatedModules": true,
    "baseUrl": ".",
    "paths": {
      "@asla/yoursql": ["./src/mod.ts"],
      "@asla/yoursql/client": ["./src/client/mod.ts"]
    }
  },

  "exclude": ["node_modules", "./benchmark", "./scripts", "./dist"]
}
